<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <MizuMod.GlobalSettingDef>
    <defName>Mizu_GlobalSettings</defName>
    
    <forDebug>
      <needWaterReduceRate>1</needWaterReduceRate>
      
      <enableChangeWaterPoolType>false</enableChangeWaterPoolType>
      <changeWaterPoolType>RawWater</changeWaterPoolType>
      
      <enableChangeWaterPoolVolume>false</enableChangeWaterPoolVolume>
      <waterPoolVolumeRate>0.33</waterPoolVolumeRate>
      
      <enableResetRegenRate>false</enableResetRegenRate>
      <resetBaseRegenRateRangeForShallow>
        <min>2.5</min>
        <max>5.0</max>
      </resetBaseRegenRateRangeForShallow>
      <resetBaseRegenRateRangeForDeep>
        <min>10</min>
        <max>20</max>
      </resetBaseRegenRateRangeForDeep>
      <resetRainRegenRatePerCellForShallow>4</resetRainRegenRatePerCellForShallow>
      <resetRainRegenRatePerCellForDeep>2</resetRainRegenRatePerCellForDeep>
      
