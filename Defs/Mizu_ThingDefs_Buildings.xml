  <ThingDef Name="Mizu_WaterPipeBase" Abstract="True">
    <label>pipe</label>
    <description>Plumbing for connecting a Water Treatment system to washing and toilet facilities.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Building/Production/Mizu_WaterPipe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom5</li>
      </linkFlags>
      <damageData>
        <rect>(0,0.35,1,0.3)</rect>
      </damageData>
    </graphicData>
    <blueprintGraphicData>
      <texPath>Things/Building/Production/Mizu_WaterPipe</texPath>
    </blueprintGraphicData>
    <building>
      <isInert>true</isInert>
      <ignoreNeedsPower>true</ignoreNeedsPower>
      <isEdifice>false</isEdifice>
    </building>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <passability>Standable</passability>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>35</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <drawerType>MapMeshAndRealTime</drawerType>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <repairEffect>Repair</repairEffect>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Mizu</designationCategory>
    <designationHotKey>Misc1</designationHotKey>
    <filthLeaving>BuildingRubble</filthLeaving>
    <comps>
      <li Class="MizuMod.CompProperties_WaterNet">
        <compClass>MizuMod.CompWaterNetPipe</compClass>
      </li>
    </comps>
    <placeWorkers>
      <li>MizuMod.PlaceWorker_WaterNet</li>
    </placeWorkers>
  </ThingDef>

