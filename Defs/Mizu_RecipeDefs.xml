  <MizuMod.GetWaterRecipeDef Name="Mizu_DrawWaterBase" Abstract="True">
    <workerCounterClass>MizuMod.RecipeWorkerCounter_DrawWater</workerCounterClass>
    <workSpeedStat>Mizu_DrawingSpeed</workSpeedStat>
