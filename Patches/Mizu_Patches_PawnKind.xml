  <!-- 各種ポーンの初期所持品に水を追加する -->
  <!-- 原住民 -->
  <Operation Class="PatchOperationAdd">
    <xpath>*/PawnKindDef[@Name = "TribalBase"]</xpath>
    <value>
      <inventoryOptions>
        <skipChance>0</skipChance>
        <subOptionsChooseOne>
          <li>
            <choiceChance>100</choiceChance>
            <thingDef>Mizu_NormalWater</thingDef>
            <countRange>
              <min>2</min>
              <max>3</max>
            </countRange>
          </li>
        </subOptionsChooseOne>
      </inventoryOptions>
    </value>
  </Operation>
  
